{
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist",
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
  }
}